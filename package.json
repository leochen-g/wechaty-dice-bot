{
  "name": "wechaty-dice-bot",
  "version": "0.0.1",
  "description": "Wechaty 卡牌抽取游戏插件，类似骰娘https://v2docs.kokona.tech/zh/latest/CookBook.html",
  "typings": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "build": "tsc && tsc -p tsconfig.cjs.json",
    "clean": "shx rm -fr dist/*",
    "copy-files-cjs": "copyfiles -u 1 src/cards/*.json src/data/**/* src/mod/*.json dist/cjs/",
    "copy-files-esm": "copyfiles -u 1 src/cards/*.json src/data/**/* src/mod/*.json dist/esm/",
    "dist": "npm-run-all clean build copy-files-cjs copy-files-esm",
    "dist:commonjs": "jq -n \"{ type: \\\"commonjs\\\" }\" > dist/cjs/package.json",
    "start": "ts-node test/index.ts",
    "start:common": "node test/dic.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "npm pack",
    "lint": "npm run lint:es && npm run lint:ts",
    "lint:md": "markdownlint README.md",
    "lint:ts": "tsc --isolatedModules --noEmit",
    "lint:es": "eslint --ignore-pattern tests/fixtures/ '{bin,examples,scripts,src,tests}/**/*.ts'",
    "release": "verpub publish",
    "release:dry": "verpub --dry-run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leochen-g/wechaty-dice-bot.git"
  },
  "peerDependencies": {
    "wechaty": "*"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leochen-g/wechaty-dice-bot/issues"
  },
  "homepage": "https://github.com/leochen-g/wechaty-dice-bot#readme",
  "engines": {
    "wechaty": ">=0.69",
    "node": ">=14"
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "lodash": "^4.17.21",
    "qrcode-terminal": "^0.12.0",
    "random-sampler": "^0.1.1",
    "wechaty": "^0.68.1",
    "wechaty-puppet-wechat": "^0.28.4"
  },
  "devDependencies": {
    "@chatie/eslint-config": "^0.12.4",
    "@chatie/git-scripts": "^0.6.2",
    "@chatie/semver": "^0.4.7",
    "@chatie/tsconfig": "^0.16.2",
    "@types/lodash": "^4.14.172",
    "@types/ms": "^0.7.31",
    "@typescript-eslint/parser": "^4.32.0",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "shx": "^0.3.3",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "files": [
    "bin/",
    "dist/",
    "src/"
  ],
  "publishConfig": {
    "tag": "next"
  },
  "git": {
    "scripts": {
      "pre-push": "npx git-scripts-pre-push"
    }
  }
}
